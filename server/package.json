{
  "name": "server",
  "version": "1.0.0",
  "description": "edgarLeads server",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "test": "npx tsx --test tests/*.test.ts",
    "prod": "NODE_ENV=production npx tsc && node dist/server.js",
    "dev": "NODE_ENV=development npx tsc && node dist/server.js",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev:watch": "NODE_ENV=development npx tsc -w & nodemon dist/server.js",
    "prod:watch": "NODE_ENV=production nodemon dist/server.js",
    "generate:enums": "npx tsx scripts/generate-enums.ts",
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx dotenv-cli -e .env.production -- npx prisma migrate deploy",
    "migrate:staging": "npx dotenv-cli -e .env.staging -- npx prisma migrate deploy",
    "studio": "npx prisma studio"
  },
  "author": "Adise",
  "license": "ISC",
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.10.1",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@eleads/shared": "file:../shared",
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "stytch": "^12.42.1",
    "zod": "^4.0.14"
  }
}
